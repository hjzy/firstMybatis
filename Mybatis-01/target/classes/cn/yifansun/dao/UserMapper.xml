<?xml version="1.0" encoding="UTF-8" ?>
<!--接口实现类由原来的impl转换为一个mapper文件-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace=绑定一个对应的Dao/Mapper接口-->
<mapper namespace="cn.yifansun.dao.UserDao">

    <select id="selectUser" resultType="cn.yifansun.pojo.User">
        select * from user
    </select>

    <select id="getUserById" parameterType="int" resultType="cn.yifansun.pojo.User">
        select * from user where id=#{id}
    </select>
<!--对象中的属性可以直接取出来-->
    <insert id="addUser" parameterType="cn.yifansun.pojo.User">
        insert into user(id,name,pwd) values (#{id},#{name},#{pwd})
    </insert>

    <update id="updateUser" parameterType="cn.yifansun.pojo.User">
        update user
        set name = #{name},pwd=#{pwd},id=#{id}
        where id=#{id};
    </update>

    <delete id="deleteUser">
        delete from user where id=#{id};
    </delete>

</mapper>